<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <div class="field">
    <%= f.label :title, 'Song Title:' %><br>
    <%= f.text_field :title %>
  </div>

    <div class="field">
    <%= f.label :artist_name, 'Song Artist:' %><br>
    <%= f.text_field :artist_name, list: "artist_autocomplete" %>
    <datalist id="artist_autocomplete">
      <% @artists.each do |artist| %>
        <option value="<%= artist.name %>">
      <% end %>
    </datalist>
    <br>

    <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, @genres, :id, :name%>
    <br>

    <label for="song_notes_1">Notes:</label>
    <input type="text" id="song_notes_1" name="song[note_contents][]">
    <br>
    <label for="song_notes_2">Notes:</label>
    <input type="text" id="song_notes_2" name="song[note_contents][]">
    <br />

    <br>

    <%= f.submit %>
    </div>

<% end %>
